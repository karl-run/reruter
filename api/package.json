{
  "name": "reruter-api",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "setupTestFrameworkScriptFile": "./.jest.js"
  },
  "scripts": {
    "build": "rimraf ./dist/build && babel ./src --out-dir ./dist",
    "build:watch": "rimraf ./dist/build && babel -w ./src --out-dir ./dist",
    "start": "cross-env NODE_ENV=production node ./dist/index.js",
    "start:watch": "nodemon ./dist/index.js",
    "start:dev": "run-p build:watch start:watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "deploy": "now && now alias && now rm reruter-api --safe --yes",
    "deploy:ci": "now --regions bru --token $NOW_TOKEN && now alias --token $NOW_TOKEN && now rm reruter-api --token $NOW_TOKEN --safe --yes"
  },
  "dependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0-beta.44",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "apollo-server-express": "^1.3.2",
    "body-parser": "^1.18.2",
    "cross-env": "^5.1.3",
    "express": "^4.16.2",
    "graphql": "^0.13.1",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^2.21.0",
    "http": "^0.0.0",
    "lodash.groupby": "^4.6.0",
    "lodash.orderby": "^4.6.0",
    "lodash.sortby": "^4.7.0",
    "node-fetch": "^2.1.2",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "subscriptions-transport-ws": "^0.9.6",
    "winston": "^2.4.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "devDependencies": {
    "babel-core": "^7.0.0-0",
    "babel-jest": "^22.4.3",
    "babel-preset-env": "^1.6.1",
    "fetch-mock": "^6.3.0",
    "jest": "^22.4.3",
    "jest-fetch-mock": "^1.5.0",
    "nodemon": "^1.17.1",
    "regenerator-runtime": "^0.11.1"
  }
}
